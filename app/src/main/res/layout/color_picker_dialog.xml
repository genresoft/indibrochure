            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="#e22a27"
            android:text="Lanjut"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/cancelButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="#e22a27"
            android:text="Batal"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout>
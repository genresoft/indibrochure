<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="50.0dip"
    android:background="#e22a27"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/upload_new"
        android:layout_width="45.0dip"
        android:layout_height="45.0dip"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/more" />

    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="50.0dip"
        android:layout_above="@+id/botmhori"
        android:background="#C6C6C8"
        android:scrollbarSize="0.0dip">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/loadcolors"
                android:layout_width="60.0dip"
                android:layout_height="50.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30.0dip"
                    android:src="@drawable/paint" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loadgradients"
                android:layout_width="60.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/gradient" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loadimages"
                android:layout_width="60.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/bgblack" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loadborderclor"
                android:layout_width="60.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/paintbox" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loadbordersize"
                android:layout_width="60.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/stratchinout" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loadborderstroke"
                android:layout_width="60.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/ic_b_stroke"
                    android:tint="@color/black" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loadbordergaps"
                android:layout_width="60.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/stratchline" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/loadroundbg"
                android:layout_width="60.0dip"
                android:layout_height="50.0dip"
                android:layout_marginLeft="10.0dip"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip"
                    android:src="@drawable/lineradius" />

            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>
